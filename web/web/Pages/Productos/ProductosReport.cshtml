@page
@model web.Pages.Productos.ProductosReportModel
@{
    ViewData["Title"] = "ProductosReport";
    Layout = "~/Pages/_Layout.cshtml";
}
@section Scripts {
    <script src="~/dist/productoReportApp.bundle.js" type="text/javascript"></script>
}
@Html.Partial("_KoGlobalTemplates")

<h2>Reporte de productos</h2>

<div class="mt-5" id="productosReportModel">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Folio</th>
                <th scope="col">Nombre</th>
                <th scope="col">Color</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Unidad</th>
                <th scope="col">Proveedor</th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach: productos -->
            <tr>
                <td data-bind="text: folio"></td>
                <td data-bind="text: nombre"></td>
                <td data-bind="text: color"></td>
                <td data-bind="text: cantidad"></td>
                <td data-bind="text: unidad"></td>
                <td data-bind="text: proveedor"></td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
    <div data-bind="if: showPagination">
        <!-- ko template: { name: "pagination", data: $data} -->
        <!-- /ko -->
    </div>
</div>
