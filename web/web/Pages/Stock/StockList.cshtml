@page
@model web.Pages.Stock.StockListModel
@{
    ViewData["Title"] = "StockList";
    Layout = "~/Pages/_Layout.cshtml";
}
@section Scripts {
    <script src="~/dist/stockListApp.bundle.js" type="text/javascript"></script>
}
@Html.Partial("_KoGlobalTemplates")

<h2>Stock List</h2>

<div id="stockListModel">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio</th>
                <th scope="col">Fecha</th>
                <th scope="col">Proveedor</th>
                <th scope="col">Recibo</th>
                <th scope="col"><a class="btn btn-light btn-block">Nuevo Stock</a></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach: stockList -->
            <tr>
                <td data-bind="text: productoId"></td>
                <td data-bind="text: cantidad"></td>
                <td data-bind="text: precio"></td>
                <td data-bind="text: $parent.dateFormatter($data.fecha)"></td>
                <td data-bind="text: proveedorId"></td>
                <td data-bind="text: reciboId"></td>
                <td>
                    <button class="btn btn-secondary btn-block">Borrar</button>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
    <div data-bind="if: showPagination">
        <!-- ko template: { name: "pagination", data: $data} -->
        <!-- /ko -->
    </div>
</div>