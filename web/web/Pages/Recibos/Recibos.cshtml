@page
@model web.Pages.Recibos.RecibosModel
@{
    ViewData["Title"] = "Recibos";
    Layout = "~/Pages/_Layout.cshtml";
}
@section Scripts {
    <script src="~/dist/recibosApp.bundle.js" type="text/javascript"></script>
}
@Html.Partial("_KoGlobalTemplates")
@Html.Partial("_ConfirmDeleteModal")

<h2>Recibos</h2>

<div class="mt-5" id="recibosModel">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Folio</th>
                <th scope="col">Fecha</th>
                <th scope="col">Cliente</th>
                <th scope="col">Proveedor</th>
                <th scope="col"><a class="btn btn-light btn-block" data-bind="click: save">Nuevo Recibo</a></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach: recibos -->
            <tr>
                <td data-bind="text: folio"></td>
                <td data-bind="text: $parent.dateFormatter($data.fecha)"></td>
                <td data-bind="text: clienteName"></td>
                <td data-bind="text: proveedorName"></td>
                <td>
                    <button class="btn btn-light btn-block" data-bind="click: $parent.remove.bind($parent)">Borrar</button>
                    <a class="btn btn-secondary btn-block" data-bind="attr: { href: 'ReciboVer?id=' + id }">Ver</a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
    <div data-bind="if: showPagination">
        <!-- ko template: { name: "pagination", data: $data} -->
        <!-- /ko -->
    </div>
</div>