@page
@model web.Pages.NuevoProveedorModel
@{
    ViewData["Title"] = "NuevoProveedor";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Nuevo Proveedor</h2>

<form data-bind="submit: guardar" novalidate>
    <div class="form-group">
        <label><strong>Empresa</strong></label>
        <input type="text" class="form-control" placeholder="Empresa" />
    </div>
    <div class="form-group">
        <label><strong>Contacto</strong></label>
        <input type="text" class="form-control" placeholder="Contacto" />
    </div>
    <div class="form-group">
        <label><strong>Domicilio</strong></label>
        <textarea class="form-control" rows="3" placeholder="Domicilio"></textarea>
    </div>
    <div class="form-group">
        <label><strong>Teléfono</strong></label>
        <input type="text" class="form-control" placeholder="Teléfono" />
    </div>
    <div class="form-group">
        <label><strong>Email</strong></label>
        <input type="text" class="form-control" placeholder="Email" />
    </div>
    <label><strong>Horario de atención</strong></label>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Desde</label>
            <select class="form-control">
                <option selected>1:00</option>
                <option>2:00</option>
                <option>3:00</option>
                <option>4:00</option>
                <option>5:00</option>
                <option>6:00</option>
                <option>7:00</option>
                <option>8:00</option>
                <option>9:00</option>
                <option>10:00</option>
                <option>11:00</option>
                <option>12:00</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label>hasta</label>
            <select class="form-control">
                <option selected>13:00</option>
                <option>14:00</option>
                <option>15:00</option>
                <option>16:00</option>
                <option>17:00</option>
                <option>18:00</option>
                <option>19:00</option>
                <option>20:00</option>
                <option>21:00</option>
                <option>22:00</option>
                <option>23:00</option>
                <option>24:00</option>
            </select>
        </div>
    </div>
    <div class="form-group text-right">
        <button class="btn btn-default">Cancelar</button>
        <input class="btn btn-primary" type="submit" value="Guardar">
    </div>
</form>