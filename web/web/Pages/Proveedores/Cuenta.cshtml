@page
@model web.Pages.Proveedores.CuentaModel
@{
    ViewData["Title"] = "Cuenta";
    Layout = "~/Pages/_Layout.cshtml";
}

@section Scripts {
    <script src="~/dist/cuentaApp.bundle.js" type="text/javascript"></script>
}

@Html.Partial("_KoGlobalTemplates")


<div id="cuentaForm">
    <div data-bind="template: { name: currentTemplate() }"></div>
</div>

<script id="form" type="text/html">
    <div class="form-group">
        <label><strong>Banco *</strong></label>
        <input type="text" class="form-control" placeholder="Banco" data-bind="value: banco.value, css: { 'is-invalid': banco.hasError() }, hasFocus: true" />
        <!-- ko template: { name: "Validation", data: banco } -->
        <!-- /ko -->
    </div>
    <div class="form-group">
        <label><strong>Titular *</strong></label>
        <input type="text" class="form-control" placeholder="Titular" data-bind="value: titular.value, css: { 'is-invalid': titular.hasError() }" />
        <!-- ko template: { name: "Validation", data: titular } -->
        <!-- /ko -->
    </div>
    <div class="form-group">
        <label><strong>CLABE</strong></label>
        <input type="text" class="form-control" placeholder="CLABE" data-bind="value: clabe.value, css: { 'is-invalid': clabe.hasError() }" />
        <!-- ko template: { name: "Validation", data: clabe } -->
        <!-- /ko -->
    </div>
    <div class="form-group">
        <label><strong>No. de Cuenta</strong></label>
        <input type="text" class="form-control" placeholder="No de Cuenta" data-bind="value: noCuenta.value" />
        <!-- ko template: { name: "Validation", data: noCuenta } -->
        <!-- /ko -->
    </div>
    <div class="form-group text-right">
        <a class="btn btn-light" data-bind="attr: { href: 'Cuentas?id=' + proveedorId() }">Cancelar</a>
        <input class="btn btn-primary" type="submit" value="Guardar">
    </div>
</script>

<script id="nuevo" type="text/html">
    <h2>Nueva Cuenta</h2>
    <form data-bind="submit: save" novalidate>
        <!-- ko template: { name: "form" } -->
        <!-- /ko  -->
    </form>
</script>

<script id="editar" type="text/html">
    <h2>Editar Cuenta</h2>
    <form data-bind="submit: update" novalidate>
        <!-- ko template: { name: "form" } -->
        <!-- /ko  -->
    </form>
</script>