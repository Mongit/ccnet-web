@page
@model web.Pages.Proveedores.CuentasModel
@{
    ViewData["Title"] = "Cuentas";
    Layout = "~/Pages/_Layout.cshtml";
}

@section Scripts {
    <script src="~/dist/cuentasApp.bundle.js" type="text/javascript"></script>
}

@Html.Partial("_ConfirmDeleteModal")

<h2>Cuentas</h2>

<div class="mt-5" id="cuentasForm">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Banco</th>
                <th scope="col">Titular</th>
                <th scope="col">CLABE</th>
                <th scope="col">No. Cuenta</th>
                <th scope="col"><a class="btn btn-light btn-block" data-bind="attr: { href: 'Cuenta?provId=' + proveedorIdUrlParam }">Agregar Cuenta</a></th>
            </tr>
        </thead>
        <tbody>
            <!-- ko foreach: cuentas -->
            <tr>
                <td data-bind="text: banco"></td>
                <td data-bind="text: titular"></td>
                <td data-bind="text: clabe"></td>
                <td data-bind="text: noCuenta"></td>
                <td>
                    <button class="btn btn-light btn-block" data-bind="click: $parent.delete.bind($parent)">Borrar</button>
                    <a class="btn btn-secondary btn-block" data-bind="attr: { href: 'Cuenta?id=' + id }">Editar</a>
                </td>
            </tr>
            <!-- /ko -->
        </tbody>
    </table>
</div>
